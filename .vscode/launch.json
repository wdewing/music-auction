{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Fullâ€‘stack Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "internalConsole",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.local",
      "env": {
        "NODE_OPTIONS": "--inspect",
        "PORT": "3000"
      },
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "pattern": "http://localhost:(\\d+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Next.js: Start (no debug)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.local",
      "env": { "PORT": "3000" },
      "serverReadyAction": {
        "pattern": "http://localhost:(\\d+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ]
}
